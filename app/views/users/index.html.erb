<div class= 'users'>
<% @users.each do |user| %>
    <div class= 'user'>
    <img src= '<% user.photo %>' alt= '<%= user.name %>' class='user-photo'>
    <h2><%= link_to user.name, user_path(user) %></h2> 
    <small>Number of posts: <%= user.postscounter || 0 %></small>
    </div>
<% end %>
</div>
